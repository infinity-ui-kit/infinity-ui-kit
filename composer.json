{
    "name": "tooinfinity/infinity-ui-kit",
    "description": "UI components kit",
    "keywords": [
        "tooinfinity",
        "infinity-ui-kit"
    ],
    "homepage": "https://github.com/tooinfinity/infinity-ui-kit",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "TouwfiQ Meghlaoui",
            "email": "touwfiqdev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.3",
        "ext-json": "*",
        "illuminate/filesystem": "^10.0|^11.0",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/view": "^10.0|^11.0",
        "nesbot/carbon": "^2.38|^3.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.4",
        "league/commonmark": "^1.4|^2.0",
        "livewire/livewire": "^3.0",
        "lorisleiva/cron-translator": "^0.1.1|^0.4",
        "orchestra/testbench": "^8.0|^9.0",
        "orchestra/testbench-dusk": "^8.0|^9.0",
        "pestphp/pest": "^2.34",
        "phpunit/phpunit": "^10.5|^11.0"
    },
    "autoload": {
        "psr-4": {
            "InfinityUiKit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InfinityUiKit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "InfinityUiKit\\InfinityUiKitServiceProvider"
            ]
        }
    }
}
