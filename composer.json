{
    "name": "tooinfinity/infinity-ui-kit",
    "description": "UI components kit",
    "keywords": [
        "tooinfinity",
        "infinity-ui-kit"
    ],
    "homepage": "https://github.com/tooinfinity/infinity-ui-kit",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "TouwfiQ Meghlaoui",
            "email": "touwfiqdev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Tooinfinity\\InfinityUiKit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tooinfinity\\InfinityUiKit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tooinfinity\\InfinityUiKit\\InfinityUiKitServiceProvider"
            ],
            "aliases": {
                "InfinityUiKit": "Tooinfinity\\InfinityUiKit\\InfinityUiKitFacade"
            }
        }
    }
}
